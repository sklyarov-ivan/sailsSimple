<div class="container">
    <form method="POST" action="/user/update/<%-user.id%>">
        <div class="form-group">
            <input class="form-group" type="text" value="<%-user.name%>" name="name">
        </div>
        <div class="form-group">
        <input class="form-group" type="text" value="<%-user.title%>" name="title">
        </div>
        <div class="form-group">
        <input class="form-group" type="email" value="<%-user.email%>" name="email">
        </div>
        <input class="form-group" type="submit">
        <input class="form-group" type="hidden" name="_csrf" value="<%= _csrf %>" />
    </form>
</div>